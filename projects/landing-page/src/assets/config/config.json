{
    "global": {
      "appName": "JOA Landing Page",
      "appTitle": "LandingPage"
    },
    "api": {
      "baseUrl": "http://localhost:3000/v1",
      "endpoints": {
        "playerStatus": "/player/{playerId}/status",
        "playerPromos": "/crm/selligent/personne/{playerId}/stim",
        "usePromo": "/stim/{promoId}/use",
        "validatePromo": "/stim/validate"
      },
      "requestPlayerPinAppName": "JOA MyPromo",
      "widgetAppName": "JOA Stims"
    },
    "apiMapping": {
      "promo": {
        "statusToDo": "To Do",
        "rewardTypePoint": "Point",
        "rewardTypeAmount": "Montant",
        "defaultTitle": "Promotion sans titre"
      },
      "stimToPromotion": {
        "idField": "identifiantStim",
        "codeField": "identifiantStim",
        "titleFields": ["sujet", "commentaire"],
        "rewardTypeField": "typePromo",
        "rewardValueField": "valeurPromo",
        "promoTypeField": "type",
        "usageEffectueesField": "utilisation.effectuees",
        "usageMaximumField": "utilisation.maximum",
        "usageRestantesField": "utilisation.restantes"
      }
    },
    "animations": {
      "itemDelay": 50,
      "returnItemDelay": 10,
      "cascadeEndDelay": 400,
      "viewTransitionDuration": 350,
      "maxVisibleItemsForCascade": 5,
      "clickFeedbackDuration": 700,
      "textFadeInDelay": 50,
      "textFadeInDuration": 400,
      "translationLoadDelaySimulated": 0
    },
    "localization": {
      "supportedLanguages": ["fr", "en", "bg", "de", "es", "it", "ja", "ko", "ru", "zh"],
      "defaultLanguage": "en",
      "defaultCurrencySymbol": "â‚¬",
      "translationFiles": {
        "basePath": "./assets/i18n/",
        "fileSuffix": ".json"
      },
      "defaultLocaleId": "fr",
      "localeMap": {
        "fr": "fr-FR",
        "en": "en-US",
        "bg": "bg-BG",
        "de": "de-DE",
        "es": "es-ES",
        "it": "it-IT",
        "ja": "ja-JP",
        "ko": "ko-KR",
        "ru": "ru-RU",
        "zh": "zh-CN"
      }
    },
    "validation": {
      "promoCode": {
        "pattern": "^\\w{2}-\\w{4}-\\w{4}-\\w{4}-\\w{4}$",
        "clearInputOnErrorCodes": [
          "JOAPI_STIM_0003", "JOAPI_STIM_0004", "JOAPI_STIM_0005",
          "JOAPI_STIM_0006", "JOAPI_STIM_0007", "JOAPI_STIM_0008",
          "JOAPI_STIM_0009", "JOAPI_STIM_0011", "JOAPI_STIM_0012",
          "JOAPI_STIM_0013", "JOAPI_STIM_0017", "MBOX_AUTH_ERROR",
          "PIN_INVALID"
        ]
      }
    },
    "timeouts": {
      "pinAuthentication": 10000,
      "sdkInitialization": 3000
    },
    "promo": {
      "hideUsageInfoIfMaxOne": true,
      "simulatedBalance": {
        "type": "addition",
        "value": 1000
      }
    },
    "player": {
      "anonymousPlayerIds": ["", "0", "null"]
    },
    "uiDefaults": {
      "pinPad": {
        "clearButtonText": "C"
      },
      "components": {
          "promoList": {
              "showLoadingIndicator": true
          },
          "confirmationScreen": {
              "displayBalanceForPointsOnly": true
          },
          "pinCode": {
              "autoClearOnMboxError": true
          }
      }
    },
    "mbox": {
      "authRedirect": {
        "baseUrlPattern": "{{currentUrlWithoutQuery}}/",
        "statusParamName": "status",
        "promoIdParamName": "promoId",
        "codeParamName": "code",
        "rewardTypeParamName": "rewardType",
        "rewardValueParamName": "rewardValue",
        "successValue": "success",
        "failureValue": "failure",
        "errorValue": "error"
      },
      "initialData": {
        "ownerId": "",
        "egmCode": "EGM_UNKNOWN",
        "casinoId": "CAS_UNKNOWN"
      }
    },
    "errorHandling": {
      "defaultApiErrorMessageKey": "Errors.API_COMMUNICATION_ERROR",
      "defaultUnknownErrorMessageKey": "Errors.UNKNOWN_ERROR",
      "httpStatusToErrorCode": [
          { "status": 0, "code": "API_COMMUNICATION_ERROR" },
          { "status": 401, "code": "MBOX_AUTH_ERROR" },
          { "status": 403, "code": "JOAPI_STIM_0003" }
      ],
      "contexts": ["PLAYER_STATUS_CHECK", "LOAD_PROMOTIONS", "PROMO_VALIDATION", "PROMO_APPLY", "MBOX_AUTH", "HTTP_REQUEST"]
    },
    "routes": {
      "defaultRedirectPath": "LandingPage",
      "landingPagePath": "LandingPage"
    },
    "features": {
      "enableManualCodeInput": true,
      "showPromoUtilisationInfo": true
    }
  }